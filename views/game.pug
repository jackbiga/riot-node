extends layout

block content
  h1= title
  hr
  -if( game != null ){ 
    ul
      -var gameDuration = game.gameDuration / 60
      li #[strong Duration:] !{gameDuration}
      -var date = new Date(game.gameCreation)
      li #[strong Game creation:] !{date}
      li #[strong Season id:] !{game.seasonId}
  -}else{
    p game not found
  -}

block head
  a(href='/') Home
  a(href='/champs') Champions
  a(href='/items') Items
  a.selected(href='/summoners') Summoners
  a(href='#') Faq
  a(href='#') Contact